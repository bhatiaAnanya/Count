<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/counter_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:text="@string/counter_title_placeholder"
        android:textColor="@color/titleTextColor"
        android:textSize="@dimen/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/counter_value_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/zero"
        android:textColor="@color/colorAccent"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="@+id/counter_title_text_view"
        app:layout_constraintTop_toBottomOf="@+id/counter_title_text_view" />

    <TextView
        android:id="@+id/last_updated_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto"
        android:text="@string/last_updated_header"
        android:textColor="@color/titleTextColor"
        android:textSize="@dimen/subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/last_updated_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:text="TextView"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/body"
        app:layout_constraintEnd_toEndOf="@+id/last_updated_header"
        app:layout_constraintTop_toBottomOf="@+id/last_updated_header" />

    <TextView
        android:id="@+id/date_created_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:text="@string/date_created_header"
        android:textColor="@color/titleTextColor"
        android:textSize="@dimen/subtitle"
        app:layout_constraintEnd_toEndOf="@+id/last_updated_text_view"
        app:layout_constraintTop_toBottomOf="@+id/last_updated_text_view" />

    <TextView
        android:id="@+id/date_created_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:text="TextView"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/body"
        app:layout_constraintEnd_toEndOf="@+id/date_created_header"
        app:layout_constraintTop_toBottomOf="@+id/date_created_header" />

</androidx.constraintlayout.widget.ConstraintLayout>